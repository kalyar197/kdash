# BTC Trading Dashboard - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to git - it contains secrets!

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL connection URL with TimescaleDB extension
# Format: postgresql://username:password@hostname:port/database_name
DATABASE_URL=postgresql://dashuser:your_secure_password@localhost:5432/btc_dashboard

# =============================================================================
# API KEYS - Market Data Providers
# =============================================================================

# CoinAPI - Real-time cryptocurrency data
# Get your free API key at: https://www.coinapi.io/
COINAPI_KEY=your_coinapi_key_here

# Financial Modeling Prep (FMP) - Stock market data (SPX, etc.)
# Get your API key at: https://financialmodelingprep.com/
FMP_API_KEY=your_fmp_api_key_here

# Alpaca Markets - Stock and crypto data
# Get your API keys at: https://alpaca.markets/
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here

# CoinMarketCap - Cryptocurrency market data (dominance metrics)
# Get your API key at: https://pro.coinmarketcap.com/
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here

# =============================================================================
# TRADINGVIEW CREDENTIALS
# =============================================================================
# TradingView account credentials for data fetching
# WARNING: Use a dedicated account for API access, not your main account
TRADINGVIEW_USERNAME=your_tradingview_username
TRADINGVIEW_PASSWORD=your_tradingview_password

# =============================================================================
# ERROR MONITORING (OPTIONAL)
# =============================================================================
# Sentry DSN for error tracking and monitoring
# Get your DSN at: https://sentry.io/
# Note: Currently hardcoded in app.py, can be moved to .env for security
SENTRY_DSN=https://your_sentry_dsn_here

# =============================================================================
# APPLICATION CONFIGURATION (OPTIONAL)
# =============================================================================
# Flask environment (development, production)
FLASK_ENV=production

# Flask secret key for session management
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
FLASK_SECRET_KEY=your_flask_secret_key_here

# Application port
PORT=5000

# =============================================================================
# RATE LIMITING & CACHING (OPTIONAL)
# =============================================================================
# These are configured in config.py but can be overridden via environment
# CACHE_DURATION=300
# RATE_LIMIT_DELAY=1
